@model List<LNP.Core.Entities.OrderEf>
@{
    ViewBag.Title = "История заказов";
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold">@ViewBag.Title</h2>
    
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card shadow-sm border-0 rounded-3 hover-shadow">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="fw-bold mb-1">Заказ #@order.Id.ToString().Substring(0, 8)</h5>
                                    <div class="text-muted mb-2">
                                        <i class="bi bi-calendar3"></i> @order.OrderDate.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                                <div class="text-end">
                                    @{
                                        string badgeClass = "bg-primary";
                                        if (order.Status.ToString() == "Доставлен") 
                                        {
                                            badgeClass = "bg-success";
                                        }
                                        else if (order.Status.ToString() == "В обработке") 
                                        {
                                            badgeClass = "bg-warning text-dark";
                                        }
                                        else if (order.Status.ToString() == "Отправлен") 
                                        {
                                            badgeClass = "bg-info text-dark";
                                        }
                                        else if (order.Status.ToString() == "Отменен") 
                                        {
                                            badgeClass = "bg-danger";
                                        }
                                    }
                                    <span class="badge @badgeClass rounded-pill px-3 py-2 mb-2">@order.Status</span>
                                    <div class="h4 fw-bold mt-1">@order.TotalAmount.ToString("C")</div>
                                </div>
                            </div>
                            <div class="mt-3 text-end">
                                <a href="#" class="btn btn-sm btn-outline-primary rounded-pill">
                                    <i class="bi bi-eye"></i> Подробнее
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm rounded-3 p-4 text-center">
            <div class="py-4">
                <i class="bi bi-bag-x fs-1 text-muted mb-3"></i>
                <h5>У вас пока нет завершенных заказов</h5>
                <p class="text-muted">Когда вы сделаете заказ, он появится здесь</p>
                <a href="/catalog" class="btn btn-primary rounded-pill px-4 mt-2">Перейти к покупкам</a>
            </div>
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        transition: all 0.3s ease;
    }
</style>