@model List<LNP.Core.DTOs.CategoryDto>

@{
    ViewBag.Title = "Управление категориями";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Response.ContentType = "text/html; charset=utf-8";
}

<link href="~/Content/admin-styles.css" rel="stylesheet" />

<div class="admin-container">
    <div class="admin-header">
        <h2 class="admin-title">Управление категориями</h2>
        <div class="admin-actions">
            @Html.ActionLink("Добавить категорию", "CreateCategory", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Товары", "Products", null, new { @class = "btn btn-secondary" })
        </div>
    </div>

    <table class="admin-table">
        <thead>
        <tr>
            <th>Название</th>
            <th style="width: 200px;">Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td class="actions-cell">
                    @Html.ActionLink("Редактировать", "EditCategory", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                    @using (Html.BeginForm("DeleteCategory", "Admin", new { id = item.Id }, FormMethod.Post, new { style = "display:inline;" }))
                    {
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить эту категорию?')">Удалить</button>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>