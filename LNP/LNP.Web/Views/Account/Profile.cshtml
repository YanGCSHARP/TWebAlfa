@{
    var user = ViewBag.User as LNP.Core.Entities.UserEf;
    var orders = ViewBag.Orders as List<LNP.Core.Entities.OrderEf>;
    ViewBag.Title = "Профиль пользователя";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-body text-center p-4">
                    <div class="avatar-circle mb-3 mx-auto">
                        <span class="avatar-initials">@(user != null && !string.IsNullOrEmpty(user.Name) ? user.Name.Substring(0, 1).ToUpper() : "U")</span>
                    </div>
                    <h3 class="fw-bold mb-1">@(user != null ? user.Name : "Пользователь")</h3>
                    <p class="text-muted">@(user != null ? user.Email : "")</p>
                    <div class="d-grid gap-2 mt-4">
                        <a href="@Url.Action("EditProfile")" class="btn btn-outline-primary rounded-pill">
                            <i class="bi bi-pencil me-1"></i> Редактировать профиль
                        </a>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold mb-0">Адрес доставки</h5>
                        @Html.ActionLink("Изменить", "EditAddress", "Account", null, new { @class = "btn btn-sm btn-outline-primary rounded-pill" })
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (user != null && !string.IsNullOrEmpty(user.Address))
                    {
                        <div class="d-flex">
                            <div class="me-3 text-primary">
                                <i class="bi bi-geo-alt fs-4"></i>
                            </div>
                            <address class="mb-0">
                                <strong>@(user.Name)</strong><br>
                                @user.Address<br>
                                @user.City, @user.PostalCode<br>
                                @user.Country
                            </address>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-house-x text-muted fs-3 mb-2"></i>
                            <p class="mb-0">Адрес не указан</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-0 pt-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold mb-0">История заказов</h5>
                        <a href="/orders" class="btn btn-sm btn-outline-primary rounded-pill">
                            Все заказы
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (orders != null && orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                <tr>
                                    <th>№ заказа</th>
                                    <th>Дата</th>
                                    <th>Статус</th>
                                    <th class="text-end">Сумма</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var order in orders.Take(5))
                                {
                                    <tr>
                                        <td>
                                            <a href="#" class="text-decoration-none fw-semibold">
                                                #@order.Id.ToString().Substring(0, 8)
                                            </a>
                                        </td>
                                        <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            @{
                                                string badgeClass = "bg-primary";
                                                if (order.Status.ToString() == "Доставлен")
                                                {
                                                    badgeClass = "bg-success";
                                                }
                                                else if (order.Status.ToString() == "В обработке")
                                                {
                                                    badgeClass = "bg-warning text-dark";
                                                }
                                                else if (order.Status.ToString() == "Отправлен")
                                                {
                                                    badgeClass = "bg-info text-dark";
                                                }
                                                else if (order.Status.ToString() == "Отменен")
                                                {
                                                    badgeClass = "bg-danger";
                                                }
                                            }
                                            <span class="badge @badgeClass rounded-pill">@order.Status</span>
                                        </td>
                                        <td class="text-end fw-bold">@order.TotalAmount.ToString("C")</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-bag-x fs-1 text-muted mb-3"></i>
                            <h5>У вас пока нет заказов</h5>
                            <p class="text-muted">Когда вы сделаете заказ, он появится здесь</p>
                            <a href="/catalog" class="btn btn-primary rounded-pill px-4 mt-2">Перейти к покупкам</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 80px;
        height: 80px;
        background-color: #4e73df;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .avatar-initials {
        color: white;
        font-size: 32px;
        font-weight: bold;
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>