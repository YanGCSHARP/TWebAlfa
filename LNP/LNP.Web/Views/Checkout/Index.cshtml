@model LNP.Core.DTOs.PaymentDto
@{
    ViewBag.Title = "Оформление заказа";
}

<div class="container py-5">
    <h2>@ViewBag.Title</h2>

    <div class="row mt-4">
        <div class="col-md-8">
            @using (Html.BeginForm("ProcessPayment", "Checkout", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="card mb-4">
                    <div class="card-header">Данные оплаты</div>
                    <div class="card-body">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.CardNumber, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control", placeholder = "1234 5678 9012 3456" })
                            @Html.ValidationMessageFor(m => m.CardNumber)
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.ExpMonth, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.ExpMonth, new { @class = "form-control", placeholder = "MM" })
                                    @Html.ValidationMessageFor(m => m.ExpMonth)
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.ExpYear, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.ExpYear, new { @class = "form-control", placeholder = "YYYY" })
                                    @Html.ValidationMessageFor(m => m.ExpYear)
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Cvc, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Cvc, new { @class = "form-control", placeholder = "CVC" })
                            @Html.ValidationMessageFor(m => m.Cvc)
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">
                    Подтвердить оплату
                </button>
            }
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Итого</h4>
                    <div class="h4 text-primary">
                        @ViewBag.Total.ToString("C")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>