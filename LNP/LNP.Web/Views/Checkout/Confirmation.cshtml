@model Guid

<div class="container text-center py-5">
    <h2 class="text-success mb-4">
        <i class="fas fa-check-circle"></i> Заказ успешно оформлен!
    </h2>
    <div class="alert alert-primary">
        Номер вашего заказа: <strong>@Model.ToString("N").Substring(0, 8).ToUpper()</strong>
    </div>
    
    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="fas fa-home"></i> На главную
        </a>
        <a href="@Url.Action("OrderHistory", "Account")" class="btn btn-outline-secondary">
            <i class="fas fa-history"></i> История заказов
        </a>
    </div>
</div>

<style>
    .alert-primary {
        background-color: #000080;
        color: white;
        border-color: #000066;
        font-size: 1.25rem;
    }
</style>