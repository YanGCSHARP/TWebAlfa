@{
    ViewBag.Title = "Контакты";
}

<!-- Contact Hero Section -->
<section class="contact-hero">
    <div class="contact-hero-content">
        <h1 class="contact-hero-title">Свяжитесь с нами</h1>
        <p class="contact-hero-subtitle">Мы всегда готовы помочь вам создать идеальный гардероб</p>
    </div>
</section>

<!-- Contact Main Section -->
<section class="contact-main">
    <div class="contact-main-container">
        <div class="contact-info">
            <h2 class="section-title">Как с нами связаться</h2>
            
            <div class="contact-methods">
                <div class="contact-method">
                    <div class="contact-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="contact-details">
                        <h3>Наш адрес</h3>
                        <p>Кишинев, ул Московская 77/7<br>
                        Резеденция LNP, 2-й этаж<br>
                        1337228777, Молдова</p>
                    </div>
                </div>

                <div class="contact-method">
                    <div class="contact-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="contact-details">
                        <h3>Телефон</h3>
                        <p>+373 45 39 2190<br>
                        Понедельник-Пятница с 10:00 до 21:00</p>
                    </div>
                </div>

                <div class="contact-method">
                    <div class="contact-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="contact-details">
                        <h3>Email</h3>
                        <p>info@lnp-fashion.com<br>
                        support@lnp-fashion.com</p>
                    </div>
                </div>

                <div class="contact-method">
                    <div class="contact-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="contact-details">
                        <h3>Часы работы</h3>
                        <p>Пн-Вс: 10:00 - 21:00<br>
                        Без выходных</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="contact-form-section">
            <h2 class="section-title">Напишите нам</h2>
            <form class="contact-form" method="post" action="@Url.Action("Contact", "Home")">
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName">Имя *</label>
                        <input type="text" id="firstName" name="firstName" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Фамилия *</label>
                        <input type="text" id="lastName" name="lastName" required>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">Телефон</label>
                        <input type="tel" id="phone" name="phone">
                    </div>
                </div>

                <div class="form-group">
                    <label for="subject">Тема обращения *</label>
                    <select id="subject" name="subject" required>
                        <option value="">Выберите тему</option>
                        <option value="general">Общие вопросы</option>
                        <option value="order">Вопросы по заказу</option>
                        <option value="custom">Индивидуальный пошив</option>
                        <option value="styling">Персональный стилист</option>
                        <option value="partnership">Сотрудничество</option>
                        <option value="complaint">Жалоба</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="message">Сообщение *</label>
                    <textarea id="message" name="message" rows="6" required placeholder="Расскажите нам, чем мы можем помочь..."></textarea>
                </div>

                <div class="form-group checkbox-group">
                    <label class="checkbox-label">
                        <input type="checkbox" name="newsletter" value="true">
                        <span class="checkmark"></span>
                        Я хочу получать новости о новых коллекциях и специальных предложениях
                    </label>
                </div>

                <div class="form-group checkbox-group">
                    <label class="checkbox-label">
                        <input type="checkbox" name="privacy" value="true" required>
                        <span class="checkmark"></span>
                        Я согласен с <a href="#" class="privacy-link">политикой конфиденциальности</a> *
                    </label>
                </div>

                <button type="submit" class="submit-btn">Отправить сообщение</button>
            </form>
        </div>
    </div>
</section>

<!-- Services Section -->
